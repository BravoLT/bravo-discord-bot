{
  "name": "bravo-bentley",
  "version": "1.0.0",
  "description": "Discord bot written in Typescript and discord.js hosted on Heroku",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prestart:dev": "npm run build",
    "start:dev": "nodemon build/index.js",
    "prebuild": "rimraf ./build",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaveAldon/bravo-discord-bot.git"
  },
  "keywords": [
    "discord",
    "typescript",
    "bot",
    "heroku"
  ],
  "author": "Dave Aldon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DaveAldon/bravo-discord-bot/issues"
  },
  "homepage": "https://github.com/DaveAldon/bravo-discord-bot/blob/main/README.md",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.20",
    "discord.js": "^12.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "got": "^11.8.2",
    "jsdom": "^16.4.0",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
